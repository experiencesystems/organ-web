@model OrganWeb.Areas.Sistema.Models.ViewModels.ViewManutencao
@{
    ViewBag.Title = "Manutenção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-body">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title box-title">Manutenções recentes</h6>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="ti-minus minimize-card"></i></li>
                            <li><i class="icon-refresh"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-content">
                        <div class="card bg-light mb-3" style="max-width: 18rem;">
                            @foreach (var item in Model.MaquinaManutencaos)
                            {
                                <div class="card-header">
                                    Manutenção de @Html.DisplayFor(model => item.Maquina.Nome) -
                                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdManutencao, id2 = item.IdMaquina })
                                </div>
                                <div class="card-body">
                                    Data: @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Manutencao.Data))
                                    @Html.DisplayFor(model => item.Manutencao.Detalhes)
                                </div>
                                <div class="modal-footer">
                                    <a class="popup btn btn-primary" href="@Url.Action("Editar", "Manutencao", new { id = item.IdManutencao, id2 = item.IdMaquina })" style="margin-bottom:20px; margin-top:20px;">Editar</a><a class="popup btn btn-danger" href="@Url.Action("Excluir", "Manutencao", new { id = item.IdManutencao, id2 = item.IdMaquina })" style="margin-bottom:20px; margin-top:20px;">Excluir</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card border-success mb-3" style="max-width: 18rem;">
                        <div class="card-body text-success">
                            <h5 class="card-title"></h5>
                            <p class="card-text">
                                <a class="popup btn btn-add" href="/Sistema/Manutencao/Create" style="margin-bottom:20px; margin-top:20px;">Nova manutenção</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<environment include="Development">
    <script src="~/Scripts/crudmodal.js" asp-append-version="true" defer></script>
</environment>

<environment exclude="Development">
    <script src="~/js/crudmodal.min.js" asp-append-version="true" defer></script>
</environment>

