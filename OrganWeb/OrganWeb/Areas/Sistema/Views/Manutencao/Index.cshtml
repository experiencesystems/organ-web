@model OrganWeb.Areas.Sistema.Models.ViewModels.ViewManutencao
@{
    ViewBag.Title = "Manutenção";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />

<div class="main-body">
    <div class="row">
        <div class="col-md-8">
            <div class="tablecontainer">
                <p class="card-text">
                    <a class="popup btn btn-add" href="/Sistema/Manutencao/_NovaManutencao" style="margin-bottom:20px; margin-top:20px;">Nova manutenção</a>
                </p>

                <div class="card">
                    <div class="card-header">
                        <h6 class="card-title box-title">Manutenções recentes</h6>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="ti-minus minimize-card"></i></li>
                                <li><i class="icon-refresh"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="card-content">
                            <div class="card-title box-title">


                                <table class="table" id="myDatatable">

                                    <thead class="thead-title">
                                        <tr>
                                            <th>Máquina em manutenção</th>
                                            <th scope="col">Data</th>
                                            <th scope="col">Tratamento</th>
                                            <th scope="col">Descrição</th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.MaquinaManutencaos)
                                        {
                                            <tr class="tr-shadow">
                                                <td>
                                                    @Html.DisplayFor(model => item.Maquina.Nome)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(model => item.Manutencao.Data)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.IdManutencao, id2 = item.IdMaquina }, new { @class = "popup" })
                                                </td>
                                                <td>

                                                    @Html.ActionLink("Editar", "Editar", new { id = item.IdManutencao, id2 = item.IdMaquina }, new { @class = "popup" })
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-danger delete" data-url="@Url.Action("Excluir", "Manutencao", new { id = item.IdManutencao, id2 = item.IdMaquina })">Excluir</button>
                                                </td>
                                            </tr>
                                            <tr class="spacer"></tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/StephanWagner/jBox@v1.0.5/dist/jBox.all.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        var Popup;
        $(document).ready(function () {
            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));

            })
            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');
                });

                $dialog = $('<div class="popupWindow" style="overflow:auto"></div>')
                    .html($pageContent)
                    .dialog({
                        draggable: false,
                        autoOpen: false,
                        resizable: false,
                        modal: true,
                        height: 600,
                        width: 650,
                        close: function () {
                            $('.overlay').hide(),
                                $dialog.dialog('destroy').remove();
                        }
                    })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })

                    e.preventDefault();
                })
                $dialog.dialog('open');
            }
        })
    </script>
}