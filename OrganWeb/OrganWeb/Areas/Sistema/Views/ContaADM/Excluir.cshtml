@model OrganWeb.Areas.Sistema.Models.Financas.DespesaAdm

<h3>Tem certeza que deseja deletar esse registro?</h3>
<div>
    <h4>Despesa Administrativa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Conta.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Conta.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Despesa.Data)</dt>
        <dd>@Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.Despesa.Data))</dd>

        <dt>@Html.DisplayNameFor(model => model.Despesa.ValorPago)</dt>
        <dd>R$ @Html.DisplayFor(model => model.Despesa.ValorPago)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Conta.Id)
        @Html.HiddenFor(model => model.Despesa.Id)
        @Html.HiddenFor(model => model.IdDespesa)
        @Html.HiddenFor(model => model.IdConta) 

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
