@model IEnumerable<OrganWeb.Areas.Sistema.Models.Item>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-body">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title box-title">Itens</h6>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="ti-minus minimize-card"></i></li>
                            <li><i class="icon-refresh"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-content">
                        <table class="table">
                            <thead class="thead-title">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.ValorUnit)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Estoque.Quantidade)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Fornecedor.Nome)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Categoria.Nome)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"></th>
                                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                        <td>R$ @Html.DisplayFor(modelItem => item.ValorUnit)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Estoque.Quantidade) @Html.DisplayFor(modelItem => item.Estoque.UnidadeMedida)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Fornecedor.Nome)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Categoria.Nome)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>