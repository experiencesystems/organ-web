@model OrganWeb.Areas.Sistema.Models.Praga_e_Doenca.PragaOrDoenca

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Adicionar praga ou doença</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control campo" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                @Html.RadioButtonFor(model => model.PragDoe, "Praga", new { @class = "with-gap" })
                <label for="Praga">Praga</label>
            </div>
            <div class="col-sm-6">
                @Html.RadioButtonFor(model => model.PragDoe, "Doença", new { @class = "with-gap" })
                <label for="Doenca">Doença</label>
            </div>
            @Html.ValidationMessageFor(model => model.PragDoe, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="col">
                @Html.LabelFor(model => model.Areas, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col">
                @Html.DropDownList("IdArea", new MultiSelectList(Model.Areas, "Id", "Nome"), new { multiple = "multiple", id = "areas", @class = "campo" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
