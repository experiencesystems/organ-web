@model OrganWeb.Areas.Sistema.Models.ViewModels.ViewEquipe


<div class="modal fade" id="Modal-lightbox" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                <h6 class="card-title box-title"><i class="icofont icofont-plant"></i>Nova Equipe</h6>

                <form id="main" method="post" action="#" novalidate="">
                    <div class="form-group row">
                        <label class="col-sm-8 col-form">Nome:</label>
                        
                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="nome" id="nome">
                            <span class="messages"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-sm-8 col-form">Descrição:</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" name="desc" id="desc">
                            <span class="messages"></span>
                        </div>


                        <div class="form-group row">
                            <label class="col-sm-8 col-form">Lider:</label>

                            <div class="col-sm-8">
                                <input type="text" class="form-control" name="lider" id="lider">
                                <span class="messages"></span>
                            </div>





                        </div>


                    </div>
                    
                    
                </form>
            </div>
        </div>
    </div>
</div>