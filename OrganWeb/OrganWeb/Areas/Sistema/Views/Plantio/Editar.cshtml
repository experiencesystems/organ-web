@model OrganWeb.Areas.Sistema.Models.Safras.Plantio

@using (Html.BeginForm("Editar", "Plantio", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4 class="modal-title">Editar plantio</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        
        <div class="form-group">
            <div class="col">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control campo" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                @Html.LabelFor(model => model.Sistema, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(model => model.TipoPlantio, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-6">
                @Html.DropDownListFor(model => model.Sistema, Model.Sistemas, new { @class = "form-control campo" } )
                @Html.ValidationMessageFor(model => model.Sistema, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                @Html.DropDownListFor(model => model.TipoPlantio, Model.Periodos, new { @class = "form-control campo" } )
                @Html.ValidationMessageFor(model => model.TipoPlantio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                @Html.LabelFor(model => model.DataInicio, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(model => model.DataColheita, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DataInicio, new { htmlAttributes = new { @class = "form-control campo" } })
                @Html.ValidationMessageFor(model => model.DataInicio, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.DataColheita, new { htmlAttributes = new { @class = "form-control campo" } })
                @Html.ValidationMessageFor(model => model.DataColheita, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-addmodal" data-save="ajax-modal">Salvar</button>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
