@model OrganWeb.Areas.Sistema.Models.ViewModels.CreatePlantioViewModel

<div class="container">
<h4 class="modal-title">Cadastrar plantio</h4>
@using (Html.BeginForm("Create", "Plantio", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col">
            @Html.LabelFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="col">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control campo" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(model => model.Sistema, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-sm-6">
            @Html.LabelFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-sm-6">
            @Html.DropDownListFor(model => model.Sistema, Model.Sistemas, new { @class = "form-control campo" })
            @Html.ValidationMessageFor(model => model.Sistema, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.DropDownListFor(model => model.Tipo, Model.Periodos, new { @class = "form-control campo" })
            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-6">
            @Html.LabelFor(model => model.Inicio, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-sm-6">
            @Html.LabelFor(model => model.Colheita, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="col-sm-6">
            @Html.EditorFor(model => model.Inicio, new { htmlAttributes = new { @class = "form-control campo" } })
            @Html.ValidationMessageFor(model => model.Inicio, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.EditorFor(model => model.Colheita, new { htmlAttributes = new { @class = "form-control campo" } })
            @Html.ValidationMessageFor(model => model.Colheita, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            @Html.LabelFor(model => model.IdArea, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col">
            @Html.DropDownList("IdArea", new MultiSelectList(Model.Areas, "Id", "Nome"), new { multiple = "multiple", id = "areas", @class = "campo" })
            @Html.ValidationMessageFor(model => model.IdArea, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            @Html.LabelFor(model => model.IdFunc, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col">
            @Html.DropDownList("IdFunc", new MultiSelectList(Model.Funcionarios, "Id", "Nome"), new { multiple = "multiple", id = "funcs", @class = "campo" })
            @Html.ValidationMessageFor(model => model.IdFunc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            @Html.LabelFor(model => model.IdEstoque, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col">
            @Html.DropDownList("IdEstoque", new SelectList(Model.Sementes, "IdEstoque", "Nome"), new { @class = "form-control campo" } )
            @Html.ValidationMessageFor(model => model.IdEstoque, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col">
            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col">
            @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control campo" } })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
        </div>
    </div>

    <br>
    <button type="submit" class="btn btn-primary btn-add" data-save="ajax-modal">Adicionar</button>
    <br>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}