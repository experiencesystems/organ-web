@model OrganWeb.Areas.Sistema.Models.Safras.Plantio

<h3>Tem certeza que deseja deletar esse registro?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Sistema)</dt>
        <dd>@Html.DisplayFor(model => model.Sistemas.Where(x => x.Value == model.Sistema.ToString()).First().Text)</dd>

        <dt>@Html.DisplayNameFor(model => model.DataColheita)</dt>
        <dd>@Html.DisplayFor(model => model.DataColheita)</dd>

        <dt>@Html.DisplayNameFor(model => model.DataInicio)</dt>
        <dd>@Html.DisplayFor(model => model.DataInicio)</dd>

        <dt>@Html.DisplayNameFor(model => model.TipoPlantio)</dt>
        <dd>@Html.DisplayFor(model => model.Periodos.Where(x => x.Value == model.TipoPlantio.ToString()).First().Text)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <input type="submit" value="Deletar" class="btn btn-addmodal" />
    }
</div>
