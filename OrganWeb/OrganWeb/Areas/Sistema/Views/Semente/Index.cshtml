@model OrganWeb.Areas.Sistema.Models.ViewModels.ViewSementes
@{
    ViewBag.Title = "Sementes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-body">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title box-title">Sementes</h6>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="ti-minus minimize-card"></i></li>
                            <li><i class="icon-refresh"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card border-success mb-3" style="max-width: 18rem;">
                        <div class="card-body text-success">
                            <h5 class="card-title">Nova Semente</h5>
                            <p class="card-text">
                                <div class="overlay"></div>
                                <a class="popup btn btn-add" href="/Sistema/Semente/Create" style="margin-bottom:20px; margin-top:20px;">Nova Semente</a>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <div class="card-content">
                        <div class="card bg-light mb-3" style="max-width: 18rem;">

                            <table class="table">
                                <thead class="thead-title">
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Nome</th>
                                        <th scope="col">Solo</th>
                                        <th scope="col">IncSol</th>
                                        <th scope="col">IncVento</th>
                                        <th scope="col">Acidez</th>
                                        <th scope="col">NomeFantasia</th>
                                        <th scope="col">Qtd</th>
                                        <th scope="col">UM</th>
                                        <th scope="col">ValorUnit</th>



                                    </tr>
                                </thead>
                               <tbody>
                            @foreach (var item in Model.Semente)
                            {
                                   <tr>
                                       <th scope="row"></th>
                                       <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                       <td>@Html.DisplayFor(modelItem => item.Solo)</td>
                                       <td>@Html.DisplayFor(modelItem => item.IncSol)</td>
                                       <td>@Html.DisplayFor(modelItem => item.IncVento)</td>
                                       <td>@Html.DisplayFor(modelItem => item.Acidez)</td>
                                       @foreach (var items in Model.FornecedorSementes)
                                       {
                                           <td>@Html.DisplayFor(modelItem => items.NomeFantasia)</td>


                                       }
                                       @foreach (var itemss in Model.Estoques)
                                       {
                                           <td>@Html.DisplayFor(modelItem => itemss.Qtd)</td>
                                           <td>@Html.DisplayFor(modelItem => itemss.ValorUnit)</td>
                                       }




                                   </tr>
                            }
                                 
                        </tbody>
                        
                             




                        </div>
                    </div>
                </div>
                <div class="card-content">
                    <div class="card border-success mb-3" style="max-width: 18rem;">
                        <div class="card-body text-success">

                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
