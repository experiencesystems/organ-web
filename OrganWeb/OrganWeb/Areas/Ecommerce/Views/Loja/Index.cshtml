@model OrganWeb.Areas.Ecommerce.Models.ViewModels.ViewLoja
@using PagedList.Mvc;

@{
    ViewBag.Title = "Ecommerce";
    Layout = "~/Views/Shared/_LayoutEcommerce.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ecommerce</title>
</head>
<body>

    <!--Main slide-->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Imagens/ecommerce/slide3.jpg" alt="Primeiro Slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Imagens/ecommerce/slide3.jpg" alt="Segundo Slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Imagens/ecommerce/slide3.jpg" alt="Terceiro Slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Próximo</span>
        </a>
    </div>

    <div class="tr-promotion">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="promotion" style="background-image: url(~/Imagens/ecommerce/);">
                        <div class="promotion-info">
                            <h1>Frutas <span>frescas</span></h1>
                            <p>Donec fringilla, erat et mper eleifend, justo quam.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="promotion" style="background-image: url(images/bg/promotion2.png);">
                        <div class="promotion-info">
                            <h1>Máquinas <span>eficientes</span></h1>
                            <p>Donec fringilla, erat et mper eleifend, justo quam.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="promotion" style="background-image: url(images/bg/promotion3.png);">
                        <div class="promotion-info">
                            <h1>Grãos de<span>qualidade</span></h1>
                            <p>Donec fringilla, erat et mper eleifend, justo quam.</p>
                        </div>
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.tr-promotion -->
    <!--Info-->
    <div class="container">
        <div class="biolife-service type01 biolife-service__type01">
            <ul class="services-list">
                <li>
                    <div class="service-inner">
                        <a class="srv-name" href="#">Seguro</a>
                    </div>
                </li>
                <li>
                    <div class="service-inner">
                        <a class="srv-name" href="#"><i class="mdi mdi-truck-check-outline"></i>Rápido</a>
                    </div>
                </li>
                <li>
                    <div class="service-inner">
                        <a class="srv-name" href="#"><i class="mdi mdi-security-lock"></i>Simples</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!--Info-->
    <!--PRODUTOS-->
    <div class="container">
        <div class="biolife-title-box">
            <span class="promotion-info">Últimos adicionados</span>
            <h3 class="main-title">Novidades</h3>
        </div>
        <div class="row">

            <!-- product -->
            @foreach (var item in Model.AnunciosRecentes)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="product">
                        <div class="product-img">
                            <img src="@Url.Action("FotoDoAnuncio", "Loja", new { Area = "Ecommerce", anuncio = item.Id })" alt="">
                            <div class="product-label">
                                @if (item.Desconto > 0)
                                {
                                    <span class="sale">-@Html.DisplayFor(modelItem => item.Desconto)%</span>
                                }
                            </div>
                        </div>
                        <div class="product-body">
                            <p class="product-category">@Html.DisplayFor(model => item.Produto.Categorias.Where(x => x.Value == item.Produto.Categoria.ToString()).First().Text)</p>
                            <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.Nome)<br /><i class="icon-room"></i>@Html.DisplayFor(modelItem => item.Anunciante.Endereco.Logradouro.Bairro.Cidade.Nome) - @Html.DisplayFor(modelItem => item.Anunciante.Endereco.Logradouro.Bairro.Cidade.Estado.UF)</a></h3>
                            @if (item.Desconto > 0)
                            {
                                double valornovo = Math.Round(item.Produto.ValorUnit - ((item.Produto.ValorUnit * item.Desconto) / 100), 2, MidpointRounding.ToEven);
                                <h4 class="product-price">
                                    R$ @valornovo
                                    <del class="product-old-price">R$ @Html.DisplayFor(modelItem => item.Produto.ValorUnit)</del>
                                </h4>
                            }
                            else
                            {
                                <h4 class="product-price">
                                    R$ @Html.DisplayFor(modelItem => item.Produto.ValorUnit)
                                </h4>
                            }
                            <div class="product-rating">
                                @for (var i = 1; i <= item.Estrelas; i++)
                                {
                                    <i class="mdi mdi-star"></i>
                                }
                                @if (item.Estrelas < 5)
                                {
                                    for (var i = 1; i <= (5 - item.Estrelas); i++)
                                    {
                                        <i class="mdi mdi-star-outline"></i>
                                    }
                                }
                            </div>
                            <div class="product-btns">
                                @using (Html.BeginForm("AddWishlist", "Wishlist", new { idAnuncio = item.Id }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken();
                                    <button class="add-to-wishlist" type="submit" value="@item.Id"><i class="mdi mdi-cards-heart"></i><span class="tooltipp" value="Adicionar na lista de desejos"></span></button>
                                }
                                @using (Html.BeginForm("AddAoCarrinho", "Carrinho", new { idAnuncio = item.Id }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken();
                                    <button class="add-to-compare" type="submit" value="@item.Id"><i class="mdi mdi-cart-plus"></i><span class="tooltipp" value="Adicionar no carrinho"></span></button>
                                }
                                <a class="quick-view" href="@Url.Action("Detalhes", "Anuncio", new { id = item.Id })"><i class="mdi mdi-information-outline"></i><span class="tooltipp" value="Detalhes"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /product -->
            }
        </div>
        <br />
        Página @(Model.AnunciosRecentes.PageCount < Model.AnunciosRecentes.PageNumber ? 0 : Model.AnunciosRecentes.PageNumber) de @Model.AnunciosRecentes.PageCount

        @Html.PagedListPager(Model.AnunciosRecentes, pagenovos => Url.Action("Index",
            new { pagenovos }), new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "pagination page-item p1" }
            })
    </div>
    <br>
    <!--PRODUTOS-->
    <!---->
    <div class="tr-cta section-padding section-bg-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="cta-image">
                        <img src="~/Imagens/ecommerce/banner_prod.jpg" alt="Image" class="img-fluid">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cta-info">
                        <h1>Ofertas especiais</h1>
                        <h2>Desconto de 50%</h2>
                        <h3>pedidos acima de R$1000</h3>
                        <ul class="countdown global-list">
                            <li>
                                <span class="days">00</span>
                                <p>dias</p>
                            </li>
                            <li>
                                <span class="hours">00</span>
                                <p>horas</p>
                            </li>
                            <li>
                                <span class="minutes">00</span>
                                <p>minutos</p>
                            </li>
                            <li>
                                <span class="seconds">00</span>
                                <p>segundos</p>
                            </li>
                        </ul><!-- countdown -->
                        <a href="#" class="btn btn-primary"><span><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> </span>Shop Now</a>
                    </div>
                </div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div>
    <!-- /.tr-cta -->
    <br><br>
    <!---->
    <div class="tr-products products-two popup-two section-padding">
        <div class="container">
            <div class="biolife-title-box">
                <span class="promotion-info">Descontos</span>
                <h3 class="main-title">Em promoção</h3>
            </div>
            <div class="product-slider">
                <div class="products">
                    <div class="row">
                        @foreach (var item in Model.AnunciosComDesconto)
                        {
                            <div class="col-md-6 col-lg-3">
                                <div class="product">
                                    <div class="product-img">
                                        <img src="@Url.Action("FotoDoAnuncio", "Loja", new { Area = "Ecommerce", anuncio = item.Id })" alt="">
                                        <div class="product-label">
                                            @if (item.Desconto > 0)
                                            {
                                                <span class="sale">-@Html.DisplayFor(modelItem => item.Desconto)%</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@Html.DisplayFor(model => item.Produto.Categorias.Where(x => x.Value == item.Produto.Categoria.ToString()).First().Text)</p>
                                        <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.Nome)<br /><i class="icon-room"></i>@Html.DisplayFor(modelItem => item.Anunciante.Endereco.Logradouro.Bairro.Cidade.Nome) - @Html.DisplayFor(modelItem => item.Anunciante.Endereco.Logradouro.Bairro.Cidade.Estado.UF)</a></h3>
                                        @if (item.Desconto > 0)
                                        {
                                            double valornovo = Math.Round(item.Produto.ValorUnit - ((item.Produto.ValorUnit * item.Desconto) / 100), 2, MidpointRounding.ToEven);
                                            <h4 class="product-price">
                                                R$ @valornovo
                                                <del class="product-old-price">R$ @Html.DisplayFor(modelItem => item.Produto.ValorUnit)</del>
                                            </h4>
                                        }
                                        else
                                        {
                                            <h4 class="product-price">
                                                R$ @Html.DisplayFor(modelItem => item.Produto.ValorUnit)
                                            </h4>
                                        }
                                        <div class="product-rating">
                                            @for (var i = 1; i <= item.Estrelas; i++)
                                            {
                                                <i class="mdi mdi-star"></i>
                                            }
                                            @if (item.Estrelas < 5)
                                            {
                                                for (var i = 1; i <= (5 - item.Estrelas); i++)
                                                {
                                                    <i class="mdi mdi-star-outline"></i>
                                                }
                                            }
                                        </div>
                                        <div class="product-btns">
                                            @using (Html.BeginForm("AddWishlist", "Wishlist", new { idAnuncio = item.Id }, FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken();
                                                <button class="add-to-wishlist" type="submit" value="@item.Id"><i class="mdi mdi-cards-heart"></i><span class="tooltipp" value="Adicionar na lista de desejos"></span></button>
                                            }
                                            @using (Html.BeginForm("AddAoCarrinho", "Carrinho", new { idAnuncio = item.Id }, FormMethod.Post))
                                            {
                                                @Html.AntiForgeryToken();
                                                <button class="add-to-compare" type="submit" value="@item.Id"><i class="mdi mdi-cart-plus"></i><span class="tooltipp" value="Adicionar no carrinho"></span></button>
                                            }
                                            <a class="quick-view" href="@Url.Action("Detalhes", "Anuncio", new { id = item.Id })"><i class="mdi mdi-information-outline"></i><span class="tooltipp" value="Detalhes"></span></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /product -->
                        }
                    </div><!-- /.row -->
                    <br />
                    Página @(Model.AnunciosRecentes.PageCount < Model.AnunciosRecentes.PageNumber ? 0 : Model.AnunciosRecentes.PageNumber) de @Model.AnunciosRecentes.PageCount

                    @Html.PagedListPager(Model.AnunciosRecentes, pagedesc => Url.Action("Index",
                        new { pagedesc }), new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "pagination page-item p1" }
                        })
                </div><!-- /.products -->
            </div><!-- /.product-slider -->

        </div><!-- /.container -->
    </div><!-- /.tr-products -->
    <!--Block 06: Products-->
</body>
</html>
