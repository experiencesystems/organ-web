@model OrganWeb.Areas.Ecommerce.Models.Vendas.Anuncio

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_LayoutEcommerce.cshtml";
}

<div class="container">
    <div class="content md-margin-top-50px">
        <div class="sumary-product single-layout">

            <div class="media">
                <ul class="biolife-carousel slider-for" data-slick='{"arrows":false,"dots":false,"slidesMargin":30,"slidesToShow":1,"slidesToScroll":1,"fade":true,"asNavFor":".slider-nav"}'>
                    <li><img src="~/Imagens/ecommerce/miniview-1.jpg" alt="" width="500" height="500"></li>
                </ul>
            </div>

            <div class="product-attribute">
                <div class="product-details">
                    <h3 class="title">@Html.DisplayFor(model => model.Nome)</h3>
                    <div>
                        <div class="rating">
                            <p>
                                <span>
                                    @for (var i = 1; i <= Model.Estrelas; i++)
                                    {
                                        <i class="mdi mdi-star"></i>
                                    }
                                    @if (Model.Estrelas < 5)
                                    {
                                        for (var i = 1; i <= (5 - Model.Estrelas); i++)
                                        {
                                            <i class="mdi mdi-star-outline"></i>
                                        }
                                    }
                                </span>
                            </p>
                            <span class="review-count">(@Html.DisplayFor(model => Model.NumAvaliacoes) Avaliações)</span>
                            <b class="category">@Html.DisplayFor(model => model.Produto.Categoria)</b>
                        </div>
                    </div>
                    <p class="excerpt">@Html.DisplayFor(model => model.Desc)</p>
                    <div class="price">
                        <ins><span class="price-amount"><span class="currencySymbol">R$</span>@Html.DisplayFor(model => model.Produto.ValorUnit)</span></ins>
                        <del><span class="price-amount"><span class="currencySymbol">R$</span>@Html.DisplayFor(model => model.Produto.UnidadeMedida.Desc)</span></del>
                    </div>
                    <a><i class="icon-room"></i>@Html.DisplayFor(model => model.Anunciante.Endereco.Logradouro.Bairro.Cidade.Nome), @Html.DisplayFor(model => model.Anunciante.Endereco.Logradouro.Bairro.Cidade.Estado.UF)</a>

                    <p>@Html.DisplayFor(model => model.Desconto) %</p>
                    <div class="row">
                        <div class="w-100"></div>
                        <div class="col-md-12">
                            <p style="color: #000;">@Html.DisplayFor(model => model.Quantidade) @Html.DisplayFor(model => model.Produto.UnidadeMedida.Desc) disponíveis</p>
                        </div>
                    </div>
                </div>
                <!-- /Product details -->
            </div>
            <div class="action-form">
                <div class="quantity-box">
                    <span class="title">Quantidade:</span>
                    <div class="qty-input">
                        <input type="text" name="qty12554" value="1" data-max_value="20" data-min_value="1" data-step="1">
                        <a href="#" class="qty-btn btn-up"><i class="fa fa-caret-up" aria-hidden="true"></i></a>
                        <a href="#" class="qty-btn btn-down"><i class="fa fa-caret-down" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="total-price-contain">
                    <span class="title">Preço total:</span>
                    <p class="price">R$000,00</p>
                </div>
                <div class="buttons">
                    <a href="#" class="btn add-to-cart-btn">Adicionar no carrinho</a>
                    <p class="pull-row">
                        <a href="#" class="btn wishlist-btn">Lista de desejo</a>
                    </p>
                </div>
                <div class="location-shipping-to">
                    <span class="title">Tamanho:</span>
                    <select name="shipping_to" class="country">
                        <option value="-1">Selecione o tamanho</option>
                        <option value="">Pequeno</option>
                        <option value="">Médio</option>
                        <option value="">Grande</option>
                        <option value="">Muito grande</option>
                    </select>
                </div>
                <div class="acepted-payment-methods">
                    <ul class="payment-methods">
                        <li><img src="assets/images/card1.jpg" alt="" width="51" height="36"></li>
                        <li><img src="assets/images/card2.jpg" alt="" width="51" height="36"></li>
                        <li><img src="assets/images/card3.jpg" alt="" width="51" height="36"></li>
                        <li><img src="assets/images/card4.jpg" alt="" width="51" height="36"></li>
                    </ul>
                </div>
            </div>

        </div>

        <div class="product-tabs single-layout biolife-tab-contain">
            <div class="tab-head">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="descprod-tab" data-toggle="tab" href="#descprod" role="tab" aria-controls="produto" aria-selected="true">Descrição do produto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="descanun-tab" data-toggle="tab" href="#descanun" role="tab" aria-controls="anunciante" aria-selected="false">Detalhes do anunciante</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="perguntas-tab" data-toggle="tab" href="#perguntas" role="tab" aria-controls="perguntas" aria-selected="false">Perguntas</a>
